.chat-main
  .main-header
    .main-header__left-box
      .main-header__left-box__current-group
        TEST
      %ul.main-header__left-box__member-list
        %li.main-header__left-box__mamber-list__member
          test-user
    = link_to "#" , class: "main-header__edit-link" do
      .main-header__edit-btn
        EDIT
  .messages
    = render @messages
  .form
    = form_for [@group,@message],html:{class: 'new_message'} do |f|
      .input-box
        = f.text_field :content, class: 'input-box__text'
        %label.input-box__image
          %i.fa.fa-image
          =f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'
